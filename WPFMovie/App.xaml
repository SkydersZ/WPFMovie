<Application x:Class="WPFMovie.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFMovie"
             xmlns:viewmodels="clr-namespace:WPFMovie.ViewModels"
             xmlns:views="clr-namespace:WPFMovie.Views"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Crimson.xaml" />

                <!-- Styles locaux-->
                <ResourceDictionary Source="Resources/Styles.xaml"/>

                <!--Resources-->
                <ResourceDictionary Source="Resources/DataTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- DataTemplate x:Key="ViewModelMovieTemplate"  DataType="{x:Type viewmodels:ViewModelMovies}"-->
                <!-- TextBlock Text="{Binding Data}" Background="Green" /-->
            <!-- /DataTemplate -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
